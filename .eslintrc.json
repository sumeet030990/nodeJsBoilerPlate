{
    "env": {
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "sort-requires"
    ],
    "rules": {
        "prettier/prettier": "warn",
        "sort-imports": "error",
        "sort-vars": "warn"
    }
}